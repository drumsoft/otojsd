{
    "tasks": [
        {
            "type": "shell",
            "label": "Post file to otojsd",
            "command": "curl",
            "args": [
                "-s", "-X", "POST",
                "http://localhost:14609",
                "--data-binary", "@${relativeFile}",
                "1>&2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Post selection to otojsd",
            "command": "curl",
            "args": [
                "-s", "-X", "POST",
                "http://localhost:14609",
                "--data-binary", "${selectedText}",
                "1>&2"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}
